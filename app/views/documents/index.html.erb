<p id="notice"><%= notice %></p>

<h1>My Documents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Filename</th>
      <th>Uploaded size</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.description %></td>
        <td><%= document.original_filename %></td>
        <td><%= document.uploaded_size_in_megabytes %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Download', download_document_url(document), target: "_blank" %></td>
        <td><%= "Shorten URL: #{request.base_url + '/' + document.token}" %></td>
        <%
=begin%>
 <td><%= link_to 'Edit', edit_document_path(document) %></td> 
<%
=end%>
        <%
=begin%>
 <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
<%
=end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

